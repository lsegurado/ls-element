{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "outDir": "dist",
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2017",
        "baseUrl": "./",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "react",
        "reactNamespace": "h"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}