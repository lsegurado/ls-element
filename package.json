{
  "name": "@lsegurado/ls-element",
  "license": "MIT",
  "version": "0.0.6",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/lsegurado"
  },
  "files": [
    "dist/"
  ],
  "baseUrl": "./src",
  "repository": {
    "type": "git",
    "url": "https://github.com/lsegurado/ls-element.git"
  },
  "description": "Typescript framework to build web components",
  "main": "index.html",
  "scripts": {
    "clean": "del-cli --force dist",
    "start": "parcel ./src/Tests/index.html --open --out-dir build",
    "convert_css_to_js": "node node_modules/@lsegurado/ls-convert-css-to-js/bin/index.js --srcDir=src --outDir=dist",
    "build": "npm run clean && tsc && npm run convert_css_to_js",
    "publish-patch-version": "npm version patch && npm run publish-npm",
    "publish-npm": "npm run build && npm publish --access restricted",
    "lint": "eslint --fix src/**/*{.ts,.tsx}",
    "stylelint": "npx stylelint --fix **/*.css"
  },
  "keywords": [
    "web-components"
  ],
  "devDependencies": {
    "parcel-bundler": "^1.12.4",
    "typescript": "^3.9.6",
    "del-cli": "^3.0.1",
    "eslint": "^7.3.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "stylelint": "^13.6.1",
    "husky": "^4.2.5",
    "stylelint-config-standard": "^20.0.0",
    "@lsegurado/parcel-plugin-ls-convert-css-to-js-module": "0.0.8",
    "@lsegurado/ls-convert-css-to-js": "0.0.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run stylelint"
    }
  }
}
