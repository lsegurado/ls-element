{
  "name": "@lsegurado/ls-element",
  "license": "MIT",
  "version": "1.2.2",
  "files": [
    "dist/*",
    "index.ts"
  ],
  "exports": "./dist/index.js",
  "main": "./dist/index.js",
  "author": "Lucas M. Segurado",
  "baseUrl": "./src",
  "repository": {
    "type": "git",
    "url": "https://github.com/lsegurado/ls-element.git"
  },
  "description": "Typescript library to build web components with decorators",
  "scripts": {
    "clean": "del-cli --force dist",
    "start": "webpack-dev-server --mode development",
    "build": "npm run clean && tsc",
    "link": "npm link && npm run clean && tsc --watch",
    "publish-patch-version": "npm version patch && npm run publish-npm",
    "publish-npm": "npm run build && npm publish --access public",
    "lint": "eslint --fix src/**/*{.ts,.tsx}",
    "stylelint": "npx stylelint --fix **/*.css"
  },
  "keywords": [
    "web-components",
    "custom elements",
    "built-in elements",
    "Autonomous custom elements"
  ],
  "devDependencies": {
    "@reduxjs/toolkit": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^4.2.1",
    "del-cli": "^3.0.1",
    "esbuild-loader": "^2.7.0",
    "eslint": "^7.16.0",
    "eslint-config-preact": "^1.1.3",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.3.6",
    "redux": "^4.0.5",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "terser-webpack-plugin": "^4.1.0",
    "to-string-loader": "^1.1.6",
    "typescript": "^4.1.3",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.1"
  },
  "dependencies": {
    "csstype": "^3.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run stylelint"
    }
  }
}
